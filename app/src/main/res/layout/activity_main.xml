<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
        android:text="Open Example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startOpenExample"
        android:layout_gravity="center"/>

    <Button
        android:text="Create Example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startCreateExample"
        android:layout_gravity="center"/>

    <Button
        android:text="Delete Example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startDeleteExample"
        android:layout_gravity="center"/>

    <Button
            android:text="Tree Example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="startTreeExample"
            android:layout_gravity="center"/>

</LinearLayout>